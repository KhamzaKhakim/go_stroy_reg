<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="66dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/GO"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:text="@string/GO"
        android:textColor="#000000"
        android:textFontWeight="700"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Zakaz"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/GO"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:lineHeight="19dp"
        android:text="@string/Zakaz"
        android:textColor="#888888"
        android:textFontWeight="600"
        android:textSize="14dp" />

    <Button
        android:id="@+id/CreateBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Zakaz"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/btn_create"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:shadowColor="#151414"
        android:text="@string/CreateACC"
        android:textColor="#FFFFFF"
        android:textFontWeight="700"
        android:textSize="15dp"
        app:backgroundTint="@color/BTNCR" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/HaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CreateBTN"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/btn_have"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:lineHeight="20.43dp"
        android:text="@string/HAVEACC"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="15dp">
    </androidx.appcompat.widget.AppCompatButton>
</RelativeLayout>